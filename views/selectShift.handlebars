<div class="container-fluid header">
    <div class="row">
        <div class="col-lg-12">
            <h3 style="color:snow;">For Waiters</h3>
            <a class="margin-right home" style="text-decoration: none" href="/"><i class="fa fa-home"></i>Home</a>
            <a href="/days" class="waiter_shifts" style="text-decoration: none"><i class="material-icons">&#xe0ba;</i>Waiter Shifts</a>
            <a class="shifts" style="text-decoration: none" href="/waiters"><i class="material-icons">&#xe15e;</i>Current Waiter</a>            
            <a class="checkWaiters" href="" style="text-decoration: none" data-toggle="modal" data-target="#checkWaiters"><i class="material-icons">person</i>Available Waiters</a>    
            

        </div>
    </div>
</div>

<form class="form-inline" action="/waiters/{{user}}" method="POST">

<div class="container-fluid top">
    <h3>{{message}}</h3>
    <hr>

    <div class="row">
        <div class="form-group">
            {{#each match}}
            <label class="control control--checkbox">
            <input type="checkbox" name="weekdays" autocomplete="off" value="{{week_days}}" {{checked}}>
            <span class="margin-left5">{{week_days}}</span></input>
            <div class="control__indicator"></div>
            </label>
            {{/each}}
        </div>
    </div>
</div>


<button type="submit" class="btn btn-light"></i>Enter</button>
{{messages.error}}
</form>

<div class="modal fade" id="checkWaiters" tabindex="-1" role="dialog" aria-labelledby="checkWaitersLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="checkWaitersLabel">Select Waiter</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                 {{#each showWaiter}}
                 <ul>
                     <li><a class="selectWaiter" style="text-decoration: none;" href="/waiters/{{waiter}}">{{waiter}}</a></li>
                 </ul>
                 {{/each}}
                </div>
            </div>
        </div>
    </div>





